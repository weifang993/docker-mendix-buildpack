<?xml version="1.0" encoding="utf-8" ?>
<widget id="cpcCheckboxWithLink.widget.cpcCheckboxWithLink" needsEntityContext="true" xmlns="http://www.mendix.com/widget/1.0/">
    <name>Checkbox with URL Link</name>
    <description>Single checkbox with an empty label followed by a link that opens in a new tab.</description>

    <icon />

    <properties>
			<property key="dataSource" type="attribute" required="false">
				<caption>Attribute:</caption>
				<category>Data source</category>
				<description></description> 
				<attributeTypes>
					<attributeType name="Boolean"/>
				</attributeTypes>
			</property>

			<property key="urlSource" type="attribute" required="true">
				<caption>URL:</caption>
				<category>Data source</category>
				<description></description> 
				<attributeTypes>
					<attributeType name="String"/> 
				</attributeTypes>
			</property>

			<property key="urlText" type="attribute" required="true">
				<caption>URL text:</caption>
				<category>Data source</category>
				<description></description> 
				<attributeTypes>
					<attributeType name="String"/> 
				</attributeTypes>
			</property>
			
			<property key="valueOfIdAndForPrefix" type="attribute"  required="false">
				<caption>Label Attribute prefix:</caption>
				<category>Display</category>
				<description>Prefix the FOR and Input ID (optional)</description> 
				<attributeTypes>
					<attributeType name="String"/>
				</attributeTypes>
			</property>

			<property key="valueOfIdAndFor" type="attribute"  required="true">
				<caption>Label Attribute:</caption>
				<category>Display</category>
				<description>Content for Label attribute FOR and Input ID. Needed for accessability</description> 
				<attributeTypes>
					<attributeType name="String"/>
				</attributeTypes>
			</property>

			<property key="mfToExecute" type="microflow" required="false" defaultValue="">
				<caption>On change:</caption>
				<category>Events</category>
				<description></description>
				<returnType type="Void"></returnType>
			</property>

    </properties>
</widget>
